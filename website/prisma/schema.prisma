generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

enum EventTheme {
  ARTS_CULTURE
  BUSINESS_FINANCE
  EDUCATION
  ENVIRONMENT
  HEALTH_WELLNESS
  COMMUNITY_BUILDING
  INNOVATION
  LEADERSHIP
  PERSONAL_DEVELOPMENT
  POLITICS_GOVERNANCE
  SCIENCE
  SOCIAL_JUSTICE
  SPORTS_RECREATION
  TRAVEL_ADVENTURE
  ENTERTAINMENT
  FOOD_CULINARY
  HISTORY
  LITERATURE
  NETWORKING
  SUSTAINABILITY
}

model event {
  id          String       @id @default(cuid())
  title       String
  description String
  startTime   DateTime
  endTime     DateTime
  location    String
  themes      EventTheme[]

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  recommendations recommendations[]
}

model user {
  user_id           String            @id
  preferences       EventTheme[]
  recommendedEvents recommendations[]
}

model recommendations {
  event   event  @relation(fields: [eventId], references: [id])
  eventId String
  user    user   @relation(fields: [userId], references: [user_id])
  userId  String

  @@id([eventId, userId])
}
